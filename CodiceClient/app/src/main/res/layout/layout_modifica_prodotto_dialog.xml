<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="50dp"
    android:paddingTop="10dp"
    android:paddingRight="50dp"
    android:paddingBottom="30dp">

    <TextView
        android:id="@+id/textViewModificaProdottoTitoloDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/verdanab"
        android:text="Modifica prodotto"
        android:textColor="@color/colorGrey"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewNomeProdottoLabelModifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/verdana_font"
        android:text="* Nome:"
        android:textColor="#5F5959"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewModificaProdottoTitoloDialog"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewDescrizioneProdottoLabelModifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/verdana_font"
        android:text="* Descrizione:"
        android:textColor="#5F5959"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewNomeProdottoLabelModifica"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewNomeProdottoLabelModifica"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeProdottoLabelModifica" />

    <TextView
        android:id="@+id/textViewQuantitaProdottoProdottoLabelModifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/verdana_font"
        android:text="* Quantità:"
        android:textColor="#5F5959"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewDescrizioneProdottoLabelModifica"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewDescrizioneProdottoLabelModifica"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutDescrizioneProdottoModifica" />

    <TextView
        android:id="@+id/textViewUnitaProdottoProdottoLabelModifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/verdana_font"
        android:text="* Unità di misura:"
        android:textColor="#5F5959"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewQuantitaProdottoProdottoLabelModifica"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewQuantitaProdottoProdottoLabelModifica"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuantitaProdottoProdottoLabelModifica" />

    <TextView
        android:id="@+id/textViewCostoAcquistoProdottoLabelModifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/verdana_font"
        android:text="* Costo d'acquisto:"
        android:textColor="#5F5959"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewUnitaProdottoProdottoLabelModifica"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewUnitaProdottoProdottoLabelModifica"
        app:layout_constraintTop_toBottomOf="@+id/textViewUnitaProdottoProdottoLabelModifica" />

    <TextView
        android:id="@+id/textViewEuroModifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/verdana_font"
        android:text="€"
        android:textColor="#5F5959"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCostoAcquistoProdottoLabelModifica"
        app:layout_constraintStart_toEndOf="@+id/textViewCostoAcquistoProdottoLabelModifica"
        app:layout_constraintTop_toTopOf="@+id/textViewCostoAcquistoProdottoLabelModifica" />

    <TextView
        android:id="@+id/textViewUnitaMisuraLabelModifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/verdana_font"
        android:text="/"
        android:textColor="#5F5959"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayoutCostoAcquistoProdottoModifica"
        app:layout_constraintStart_toEndOf="@+id/constraintLayoutCostoAcquistoProdottoModifica"
        app:layout_constraintTop_toTopOf="@+id/constraintLayoutCostoAcquistoProdottoModifica" />

    <TextView
        android:id="@+id/textViewSogliaLimiteProdottoLabelModifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/verdana_font"
        android:text="* Soglia limite:"
        android:textColor="#5F5959"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewCostoAcquistoProdottoLabelModifica"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewCostoAcquistoProdottoLabelModifica"
        app:layout_constraintTop_toBottomOf="@+id/textViewCostoAcquistoProdottoLabelModifica" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutNomeProdottoModifica"
        android:layout_width="500dp"
        android:layout_height="32dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/dummy_for_shadows"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewNomeProdottoLabelModifica"
        app:layout_constraintStart_toEndOf="@+id/textViewNomeProdottoLabelModifica"
        app:layout_constraintTop_toTopOf="@+id/textViewNomeProdottoLabelModifica">

        <AutoCompleteTextView
            android:id="@+id/EditTextNomeProdottoModifica"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:backgroundTint="#5F5959"
            android:ems="10"
            android:fontFamily="@font/verdana"
            android:inputType="text|textAutoComplete"
            android:maxLength="100"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutDescrizioneProdottoModifica"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/dummy_for_shadows"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDescrizioneProdottoLabelModifica"
        app:layout_constraintStart_toEndOf="@+id/textViewDescrizioneProdottoLabelModifica"
        app:layout_constraintTop_toTopOf="@+id/textViewDescrizioneProdottoLabelModifica"
        app:layout_constraintVertical_bias="0.24000001">

        <EditText
            android:id="@+id/EditTextDescrizioneProdottoModifica"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:backgroundTint="#5F5959"
            android:ems="10"
            android:fontFamily="@font/verdana"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:lines="10"
            android:maxLength="500"
            android:maxLines="10"
            android:minLines="1"
            android:scrollbars="vertical"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutQuantitaProdottoModifica"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/dummy_for_shadows"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewQuantitaProdottoProdottoLabelModifica"
        app:layout_constraintStart_toEndOf="@+id/textViewQuantitaProdottoProdottoLabelModifica"
        app:layout_constraintTop_toTopOf="@+id/textViewQuantitaProdottoProdottoLabelModifica">

        <EditText
            android:id="@+id/EditTextQuantitaProdottoModifica"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:backgroundTint="#5F5959"
            android:ems="10"
            android:fontFamily="@font/verdana"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutUnitaMisuraProdottoModifica"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/dummy_for_shadows"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewUnitaProdottoProdottoLabelModifica"
        app:layout_constraintStart_toEndOf="@+id/textViewUnitaProdottoProdottoLabelModifica"
        app:layout_constraintTop_toTopOf="@+id/textViewUnitaProdottoProdottoLabelModifica">

        <EditText
            android:id="@+id/EditTextUnitaMisuraProdottoModifica"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:backgroundTint="#5F5959"
            android:ems="10"
            android:fontFamily="@font/verdana"
            android:inputType="text"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutUnitaMisuraCostoAcquistoModifica"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/dummy_for_shadows"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewUnitaMisuraLabelModifica"
        app:layout_constraintStart_toEndOf="@+id/textViewUnitaMisuraLabelModifica"
        app:layout_constraintTop_toTopOf="@+id/textViewUnitaMisuraLabelModifica">

        <EditText
            android:id="@+id/EditTextUnitaMisuraCostoAcquistoModifica"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:backgroundTint="#5F5959"
            android:ems="10"
            android:fontFamily="@font/verdana"
            android:inputType="text"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutCostoAcquistoProdottoModifica"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/dummy_for_shadows"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCostoAcquistoProdottoLabelModifica"
        app:layout_constraintStart_toEndOf="@+id/textViewEuroModifica"
        app:layout_constraintStart_toStartOf="@+id/textViewEuroModifica"
        app:layout_constraintTop_toTopOf="@+id/textViewCostoAcquistoProdottoLabelModifica">

        <EditText
            android:id="@+id/EditTextCostoAcquistoProdottoModifica"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:backgroundTint="#5F5959"
            android:ems="10"
            android:fontFamily="@font/verdana"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutSogliaLimiteProdottoModifica"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/dummy_for_shadows"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSogliaLimiteProdottoLabelModifica"
        app:layout_constraintStart_toEndOf="@+id/textViewSogliaLimiteProdottoLabelModifica"
        app:layout_constraintTop_toTopOf="@+id/textViewSogliaLimiteProdottoLabelModifica">

        <EditText
            android:id="@+id/EditTextSogliaLimiteProdottoModifica"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:backgroundTint="#5F5959"
            android:ems="10"
            android:fontFamily="@font/verdana"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottoneModificaProdotto"
        android:layout_width="136dp"
        android:layout_height="47dp"
        android:background="@drawable/login_box_border"
        android:backgroundTint="#F2A726"
        android:fontFamily="@font/verdana_font"
        android:text="Modifica"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bottoneAnnullaModificaProdotto"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayoutDescrizioneProdottoModifica"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottoneAnnullaModificaProdotto" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottoneAnnullaModificaProdotto"
        android:layout_width="139dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/login_box_border"
        android:backgroundTint="#D1CBC1"
        android:fontFamily="@font/verdana_font"
        android:text="Annulla"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bottoneModificaProdotto"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutSogliaLimiteProdottoModifica" />


</androidx.constraintlayout.widget.ConstraintLayout>